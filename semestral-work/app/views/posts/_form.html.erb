<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="custom-file">
      <%= form.label "Upload post picture", class: "custom-file-label" %>
      <%= form.file_field :image, class: "custom-file-input" %>
    </div>
  </div>

  <%= form.number_field :user_id, id: :post_user_id, value: current_user.id, type: :hidden %>
  <div class="form-group">
    <%= form.submit title, :class => 'btn btn-primary' %>
  </div>
<% end %>
