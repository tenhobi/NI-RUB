<%= render @post %>

<div class="mt-3" style="display: flex">
  <% if current_user == @post.user %>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary mr-2" %>
    <%= button_to "Destroy post", post_path(@post), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure you wanna delete the post?" }} %>
  <% end %>
</div>

<div class="mt-3" style="display: flex">
  <%= link_to "Back", :back, class: "btn btn-light mr-2" %>
</div>


