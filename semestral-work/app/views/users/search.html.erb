<p class="text-center mb-5">
  <% if @users&.empty? %>
    ... no users found
  <% else %>
    there are first <%= @users.size > 20 ? 20 : @users.size %> results:
  <% end %>
</p>

<ul>
  <% @users&.each do |user| %>
    <li><%= link_to "@#{user.username}", user_profile_path(user.username) %></li>
  <% end %>
</ul>

