<div class="row justify-content-center mb-5">
  <div class="col-lg-2 col-sm-3">
    <%= image_tag url_for(user.image), style: "width: 100%", class: "mb-2 img-thumbnail" %>
  </div>
  <div class="col-lg-3 offset-lg-1 text-center text-lg-left">
    <h4>@<%= user.username %></h4>
    <div><%= user.posts.size %> posts</div>
    <h6 class="mt-4"><%= user.display_name %></h6>
    <p><%= user.description %></p>
  </div>
</div>
